#ifndef DATE_H_
#define DATE_H_

#include "transaction.h"

class Date
{
 public:
    Date ();
    Date ( int mn, int day, int yr);  // constructor
    void PrintDate();
    int  GetMonth();
    void SetMonth(int NewMonth);
    int  GetDay();
    void SetDay(int newDay);
    int  GetYear();
    void SetYear(int newYear);
    ~Date();
 private:
    int month;
    int day;
    int year;
};


#endif /* DATE_H_ */

#include "date.h"

Date::Date()
{
	month = 1;
	day = 1;
	year = 2015;
}

Date::Date(int newMonth, int newDay, int newYear)
{
	month = newMonth;
	day = newDay;
	year = newYear;
}

Date::~Date()
{

}
int  Date::GetMonth()
{
	return month;
}

void Date::SetMonth(int newMonth)
{
	month = newMonth;
}
int  Date::GetDay()
{
	return day;
}
void Date::SetDay(int newDay)
{
	day = newDay;
}
int  Date::GetYear()
{
	return year;
}
void Date::SetYear(int newYear)
{
	year = newYear;
}
void Date::PrintDate()
{
	cout << month << ' ' << day << ' ' << year;
}


