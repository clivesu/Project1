#ifndef TRANSACTION_H_
#define TRANSACTION_H_

#include <string>
#include <iostream>
#include <iomanip>
#include "date.h"

using namespace std;

class Transaction
{
public:
	Transaction();
	Transaction(string newName,int newNum,
			float newPrice,int newMember);
	~Transaction();
	string GetItemName();
	void SetItemName(string newName);
	void PrintItemName();
	int GetItemNum();
	void SetItemNum(int newItemNum);
	void PrintItemNum();
	float GetPrice();
	void SetPrice(float newPrice);
	void PrintPrice();
	int GetMemberNum();
	void SetMemberNum(int newMemberNum);
	void PrintMemberNum();

	Date OurDate;

private:
	string itemName;
	int itemNum;
	float price;
	int memberNum;
	Transaction *next;
};
#endif /* TRANSACTION_H_ */

#include "transaction.h"

	Transaction::Transaction()
	{
		itemName = ' ';
		itemNum = 0;
		price = 0.0;
		memberNum = 0;
		next = NULL;
	}
	Transaction::Transaction(string newName,int newNum,
						   float newPrice,int newMember)
	{
		itemName = newName;
		itemNum = newNum;
		price = newPrice;
		memberNum = newMember;
		next = NULL;

	}
	Transaction::~Transaction()
	{

	}
	string Transaction::GetItemName()
	{
		return itemName;
	}
	void Transaction::SetItemName(string newName)
	{
		itemName = newName;
	}
	void Transaction::PrintItemName()
	{
		cout << itemName;
	}
	int Transaction::GetItemNum()
	{
		return itemNum;
	}
	void Transaction::SetItemNum(int newItemNum)
	{
		itemNum = newItemNum;
	}
	void Transaction::PrintItemNum()
	{
		cout << itemNum;
	}
	float Transaction::GetPrice()
	{
		return price;
	}
	void Transaction::SetPrice(float newPrice)
	{
		price = newPrice;
	}
	void Transaction::PrintPrice()
	{
		cout << price;
	}
	int Transaction::GetMemberNum()
	{
		return memberNum;
	}
	void Transaction::SetMemberNum(int newMemberNum)
	{
		memberNum = newMemberNum;
	}
	void Transaction::PrintMemberNum()
	{
		cout << memberNum;
	}


